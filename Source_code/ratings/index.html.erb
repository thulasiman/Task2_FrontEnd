<p style="color: green"><%= notice %></p>

<h1>Ratings</h1>

<div id="ratings">
  <% @ratings.each do |rating| %>
    <%= render rating %>
    <p>
      <%= link_to "Show this rating", topic_post_rating_path(params[:topic_id], params[:post_id], rating) %>
    </p>
  <% end %>
</div>

<%= link_to "New rating", new_topic_post_rating_path(params[:topic_id], params[:post_id]) %>
